@using DogShelter.Web.ViewModels.CreateView;
@using DogShelter.Data.Models;
@model CreateInputModel;
<link rel="stylesheet" type="text/css" href="~/css/create-page.css">
<div class="create-container">
    <div class="create-form">
        <form method="post" class="account text-light" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="username-error text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label>
                <textarea asp-for="@Model.Description" class="form-control"></textarea>
                <span asp-validation-for="@Model.Description" class="username-error text-danger"></span>
            </div>
            <div>
                <label asp-for="Area"></label>
                <select asp-for="Area" asp-items="@Html.GetEnumSelectList(typeof(Area))" class="form-control"></select>
                <span asp-validation-for="Area" class="username-error text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Images" class="text-light"></label>
                <hr />
                <input id="files" type="file" asp-for="Images" multiple class="text-light" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-light">Create</button>
            </div>
        </form>
    </div>
</div>